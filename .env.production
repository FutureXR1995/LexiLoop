# Production Environment Variables for LexiLoop
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=lexiloop
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=lexiloop

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_service_key_here
AZURE_SPEECH_REGION=eastus

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Domain Configuration
DOMAIN=lexiloop.com
API_DOMAIN=api.lexiloop.com
AI_DOMAIN=ai.lexiloop.com

# SSL/TLS Configuration
SSL_EMAIL=admin@lexiloop.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=lexiloop-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Performance
MAX_REQUEST_SIZE=50MB
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Security
CORS_ORIGINS=https://lexiloop.com,https://www.lexiloop.com
TRUSTED_PROXIES=172.20.0.0/16

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true
ENABLE_VOICE_FEATURES=true
ENABLE_SOCIAL_FEATURES=true