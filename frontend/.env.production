# Production Environment Configuration
# LexiLoop Frontend Production Settings

# API Configuration
NEXT_PUBLIC_API_URL=https://api.lexiloop.com
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_ENVIRONMENT=production

# Authentication
NEXT_PUBLIC_JWT_SECRET=REPLACE_WITH_SECURE_SECRET_IN_PRODUCTION
NEXTAUTH_URL=https://lexiloop.com
NEXTAUTH_SECRET=REPLACE_WITH_SECURE_NEXTAUTH_SECRET

# Database Connection (if needed for API calls)
DATABASE_URL=postgresql://username:password@localhost:5432/lexiloop_prod

# External Services (DO NOT COMMIT REAL KEYS)
NEXT_PUBLIC_SPEECH_API_KEY=YOUR_AZURE_SPEECH_KEY_HERE
NEXT_PUBLIC_SPEECH_REGION=eastus
CLAUDE_API_KEY=YOUR_CLAUDE_API_KEY_HERE

# Analytics & Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_HOTJAR_ID=YOUR_HOTJAR_ID

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_SECURITY_HEADERS=true

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://cdn.lexiloop.com
NEXT_PUBLIC_ASSETS_PREFIX=

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=100