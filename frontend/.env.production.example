# LexiLoop 生产环境配置示例
# 复制此文件为 .env.production 并填入实际值

# 数据库连接 (Azure Database for PostgreSQL)
DATABASE_URL="postgresql://lexiloopuser:PASSWORD@lexiloop-db-server.postgres.database.azure.com:5432/lexiloop?sslmode=require"

# NextAuth 配置
NEXTAUTH_SECRET="your-super-secure-secret-key-here"
NEXTAUTH_URL="https://your-app.azurestaticapps.net"

# Claude AI API 配置
CLAUDE_API_KEY="your-claude-api-key-here"

# Azure Speech Services 配置
AZURE_SPEECH_KEY="your-azure-speech-key-here"
AZURE_SPEECH_REGION="eastasia"

# 应用配置
NEXT_PUBLIC_SITE_URL="https://your-app.azurestaticapps.net"
NODE_ENV="production"

# Azure Application Insights (可选)
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING="InstrumentationKey=your-instrumentation-key"

# 安全配置
ALLOWED_ORIGINS="your-app.azurestaticapps.net,your-custom-domain.com"

# 功能开关
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# 缓存配置
REDIS_URL="" # 如果使用 Redis 缓存
CACHE_TTL=3600

# 文件上传配置 (Azure Blob Storage)
AZURE_STORAGE_ACCOUNT_NAME=""
AZURE_STORAGE_ACCOUNT_KEY=""
AZURE_STORAGE_CONTAINER_NAME="lexiloop-files"

# 邮件服务配置 (如果需要)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
FROM_EMAIL="noreply@your-domain.com"

# 社交登录配置 (可选)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""